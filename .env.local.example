# Firebase Client SDK Configuration (rename this file to .env.local)
# These keys are safe to expose on the client-side.
# You can find these in your Firebase project settings -> General -> Your apps -> Firebase SDK snippet -> Config.
NEXT_PUBLIC_FIREBASE_API_KEY="your_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your_project_id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your_project_id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your_project_id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"

# Firebase Admin SDK Configuration (for server-side code)
# These MUST be kept secret and should be set in your hosting environment's secret manager, not committed to git.
# Go to Firebase project settings -> Service accounts -> Generate new private key to get a JSON file.
FIREBASE_PROJECT_ID="your_project_id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com"
# For the private key, it's recommended to store it in a secret manager and access it directly.
# For Vercel/Netlify, you can copy the whole key (including -----BEGIN PRIVATE KEY-----) into a single environment variable.
# When reading it in Node.js, you might need to replace "\\n" with "\n".
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...your_private_key...\n-----END PRIVATE KEY-----\n"

# AI Backend URL
# The URL for your .NET backend that proxies requests to AI providers.
AI_BACKEND_URL="http://localhost:5000"

# Genkit/AI Provider Keys (for Genkit flows)
# These are used by the Genkit flows.
GPT_API_KEY="your_gpt_api_key"
GEMINI_API_KEY="your_gemini_api_key"
PURPLEX_API_KEY="your_purplex_api_key"
GROK_API_KEY="your_grok_api_key"
DEEPSEEK_API_KEY="your_deepseek_api_key"
FREETOOL_API_KEY="your_freetool_api_key"
